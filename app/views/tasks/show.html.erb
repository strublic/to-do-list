<%= flash_messages %>
<h2>Task</h2>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>
<p>
  <strong>Status:</strong>
  <%= @task.status ? "Opened" : "Closed" %>
</p>
<p>
  <strong>List:</strong>
  <%= @task.list.blank? ? "" : @task.list.name %>
</p>

<%= link_to 'Edit', edit_task_path(@task), class: "btn btn-warning" %>
<%= link_to "All tasks", tasks_path, class: "btn btn-default" %>